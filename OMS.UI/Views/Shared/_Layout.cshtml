    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script src="~/matrica/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/matrica/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/matrica/assets/libs/feather-icons/feather.min.js"></script>
    <!-- App js -->
    <script src="~/matrica/assets/js/app.js"></script>
    @if (IsSectionDefined("Scripts"))
    {
        @await RenderSectionAsync("Scripts", required: true)
