<div class="col-lg-4 mx-auto">
	<div class="card">
		<div class="card-body p-0 auth-header-box">
			<div class="text-center p-3">
				<a asp-area="" asp-controller="Login" asp-action="Login" class="logo logo-admin">
					<img src="~/matrica/assets/images/logo-sm.png" height="50" alt="logo" class="auth-logo">
				</a>
				<h4 class="mt-3 mb-1 fw-semibold text-white font-18">Reset Password for Aviv</h4>
				<p class="text-muted  mb-0">
					Enter your Email and instructions will be sent to you!
				</p>
			</div>
		</div>
		<div class="card-header bg-white border-0 text-center">
			<h3 class="heading-h3 mb-0">Recover Password</h3>
		</div>
		<div class="card-body pt-0">
			<form class="my-4" action="index.html">
				<div class="form-group mb-3">
					<label class="form-label" for="username">Email</label>
					<input type="text" class="form-control" id="userEmail" name="Email" placeholder="Enter Email Address">
				</div><!--end form-group-->

				<div class="form-group mb-0 row">
					<div class="col-12">
						<a class="btn btn-de-primary w-100" asp-controller="Login" asp-action="RecoverPassword">Reset <i class="fas fa-sign-in-alt ms-1"></i></a>
					</div><!--end col-->
				</div> <!--end form-group-->
			</form><!--end form-->
			<div class="text-center text-muted">
				<p class="mb-1">Remember It ?  <a asp-controller="Login" asp-action="Login" class="text-primary ms-2">Sign in here</a></p>
			</div>
		</div>
		<div class="card-body bg-light-alt text-start">
			&copy;<script>
				document.write(new Date().getFullYear())
			</script>
			Urben Techies <span class="text-muted d-none d-sm-inline-block float-end"> Crafted with <i class="mdi mdi-heart text-danger"></i> by Aviv Solutions Inc </span>
		</div>
