                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-lg-4 g-2">
                                                <div class="mb-3 text-start">
                                                    <div class="col-sm-12 mt-2">
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input dynamic-checkbox form-check-input-custom me-2" type="checkbox" id="checkb" data-target="textb" value="1" value="1">
                                                            <label class="form-check-label mt-1" for="dynamic-checkbox">To Employee</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 g-2">
                                                <div class="mb-3 text-start">
                                                    <div class="col-sm-12 mt-2">
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input dynamic-checkbox form-check-input-custom me-2" type="checkbox" id="checkbox1" data-target="textbox1" value="1" value="1">
                                                            <label class="form-check-label mt-1" for="dynamic-checkbox">To Client</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 g-2">
                                                <div class="mb-3 text-start">
