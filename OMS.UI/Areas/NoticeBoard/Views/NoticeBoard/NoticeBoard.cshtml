</script>

<script>
       // Get the checkbox element
    const checkbox = document.getElementById("checkbox1");
    // Get the textbox container
    const textboxContainer = document.getElementById("textbox1");

    // Add an event listener for the checkbox
    checkbox.addEventListener("change", () => {
      if (checkbox.checked) {
        // Show the textbox container when checkbox is checked
        textboxContainer.style.display = "block";
      } else {
        // Hide the textbox container when checkbox is unchecked
        textboxContainer.style.display = "none";
      }
    });
</script>