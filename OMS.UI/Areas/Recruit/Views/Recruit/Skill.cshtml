@section Styles {
}
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<form action="" method="post" id="custom-step">
					<div class="tab-content" id="nav-tabContent">
						<div class="tab-pane active show" id="tbEmployeeShift" role="tabpanel" aria-labelledby="#tbEmployeeShift-tab">
							<div class="card" style="width:50%;">
								<div class="card-header">
									<div class="row align-items-center">
										<div class="col">
											<h4 class="card-title">Skill Index</h4>
										</div><!--end col-->
										<div class="col-auto">
											<button type="button" class="btn btn-de-primary" data-bs-toggle="modal" data-animation="bounce" data-bs-target=".bs-addNewSkill-modal-lg"><i class="fas fa-plus me-2"></i>Add Skill</button>
										</div><!--end col-->
									</div>  <!--end row-->
								</div><!--end card-header-->
								<div class="card-body">
									<div class="table-responsive">
										<table class="table mb-0">
											<thead class="thead-light">
												<tr>
													<th>#</th>
													<th>Name</th>
													<th>Action</th>
												</tr><!--end tr-->
											</thead>

											<tbody>
												<tr>
													<td>1</td>
													<td>Skill 1</td>
													<td>
														<a href="#" data-toggle="tooltip" data-placement="top" title="Edit"><i class="las la-pen text-secondary font-16"></i></a>
														<a href="#" class="ms-2" onclick="executeExample('warningConfirm')" data-toggle="tooltip" data-placement="top" title="Delete"><i class="las la-trash-alt text-secondary font-16"></i></a>
													</td>
												</tr><!--end tr-->
											</tbody>
										</table>
									</div>
								</div><!--end card-body-->
							</div><!--end card-->
						</div>
						<div id="mdlNewSkill" class="modal fade bs-addNewSkill-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myNSModalLabel" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title mt-0" id="myNSModalLabel">Skill Setup</h5>
										@* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
									</div>
									<div class="modal-body">
										<div class="col-lg-12" id="divTblSkillOuter">
											<div class="row">
												<div class="col-lg-12" id="divSkillInnerTable">
													<table id="SkillTable" style="width: 100%;">
														<thead style="display: -webkit-box;">
															<tr class="">
																<th class="col-form-label" style="font-weight: normal !important;">Skill <span class="text-danger">*</span></th>
																<th></th>
															</tr>
														</thead>
														<tbody>
															@for (int i = 0; i < 1; i++)
															{
																<tr>
																	<td>
																		<input class="form-control" type="text" value="" id="txtSkill-@i">
																	</td>
																	<td>
																		<button id="btnadd-@i" type="button" class="btn btn-sm btn-de-primary visible" onclick="AddItem(this)">Add More</button>
																		<button id="btnremove-@i" type="button" class="btn btn-sm btn-de-danger invisible" onclick="DeleteItem(this)">Delete</button>
																	</td>
																</tr>
															}
														</tbody>
														<input type="hidden" id="hdnLastIndex" value="0" />
													</table>
												</div>
											</div>
											<div class="row mt-4 text-end ">
												<div class="col-lg-12 ">
													<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
													<button type="button" class="btn btn-sm btn-de-primary"><i class="mdi mdi-check-all me-2"></i>Create</button>
												</div>
											</div>
									</div>
								</div><!-- /.modal-content -->
							</div><!-- /.modal-dialog -->
						</div><!-- /.modal -->
					</div>
					</div>
				</form>
				<!--end form-->
			</div>
			<!--end card-body-->
		</div>
		<!--end card-->
	</div>
	<!--end col-->
</div>
<!--end row-->
@section Scripts {
	<script type="text/javascript">
		function AddItem(btn) {
		  // let ipv46address = /((^\s*((([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5]))\s*$)|(^\s*((([0-9A-Fa-f]{1,4}:){7}([0-9A-Fa-f]{1,4}|:))|(([0-9A-Fa-f]{1,4}:){6}(:[0-9A-Fa-f]{1,4}|((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3})|:))|(([0-9A-Fa-f]{1,4}:){5}(((:[0-9A-Fa-f]{1,4}){1,2})|:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3})|:))|(([0-9A-Fa-f]{1,4}:){4}(((:[0-9A-Fa-f]{1,4}){1,3})|((:[0-9A-Fa-f]{1,4})?:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){3}(((:[0-9A-Fa-f]{1,4}){1,4})|((:[0-9A-Fa-f]{1,4}){0,2}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){2}(((:[0-9A-Fa-f]{1,4}){1,5})|((:[0-9A-Fa-f]{1,4}){0,3}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){1}(((:[0-9A-Fa-f]{1,4}){1,6})|((:[0-9A-Fa-f]{1,4}){0,4}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(:(((:[0-9A-Fa-f]{1,4}){1,7})|((:[0-9A-Fa-f]{1,4}){0,5}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:)))(%.+)?\s*$))/;
		  // let content = $(btn).closest("td").prev("td").find("input").val();
		  // if (ipv46address.test(content)) {
			var table = document.getElementById('SkillTable');
			var rows = table.getElementsByTagName('tr');
			var rowOuterHtml = rows[rows.length - 1].outerHTML;
			var lastrowIdx = document.getElementById('hdnLastIndex').value;
			var nextrowIdx = eval(lastrowIdx) + 1;
			document.getElementById('hdnLastIndex').value = nextrowIdx;
			rowOuterHtml = rowOuterHtml.replaceAll(lastrowIdx, nextrowIdx);
			var newRow = table.insertRow();
			newRow.innerHTML = rowOuterHtml;
			var btnAddID = btn.id;
			var btnDeleteid = btnAddID.replaceAll('btnadd', 'btnremove');
			var delbtn = document.getElementById(btnDeleteid);
			delbtn.classList.add('visible');
			delbtn.classList.remove('invisible');
			var addbtn = document.getElementById(btnAddID);
			addbtn.classList.add('invisible');
			addbtn.classList.remove('visible');
			$(btn).closest("td").prev("td").find("input").children(0).prevObject[0].disabled = true;
		 //  } else {
			// $(btn).closest("td").prev("td").find("input").children(0).prevObject[0].value = "";
		 //  }
		}
		function DeleteItem(btn) {
		  $(btn).closest('tr').remove();
		  $('#mdlNewSkill').modal('show');
		}

		$(window).on('load', function() {
		 $('#mdlNewSkill').modal({backdrop: 'static', keyboard: false});
		});
	</script>
}