@section Styles {
	<link href="~/matrica/assets/css/app-custom.css" rel="stylesheet" type="text/css" />
}
<div class="row">
	<div class="card">
		<div class="card-header">
			<div class="row align-items-center">
				<div class="col">
					<h4 class="card-title">
						Generate Payroll
					</h4>
				</div><!--end col-->
			</div>  <!--end row-->
		</div><!--end card-header-->
		<div class="card-body" style="padding-top: 0px;">
			<div class="row mt-4">
				<div class="col-lg-3">
						<input class="form-check-input form-check-input-custom me-2" type="checkbox" id="">
						<label class="form-check-label" for="">Include Expense Claims</label>
				</div>
				<div class="col-lg-3">
						<input class="form-check-input form-check-input-custom me-2" type="checkbox" id="">
						<label class="form-check-label" for="">Add timelogs to salary</label>
				</div>
				<div class="col-lg-3">
					<input class="form-check-input form-check-input-custom me-2" type="checkbox" id="useAttendance" onclick="toggleTextbox('divAbsentUnpaid')">
						<label class="form-check-label" for="useAttendance">Use Attendance</label>
				</div>
				<div class="col-lg-3" id="divAbsentUnpaid" style="display: none;">
						<input class="form-check-input form-check-input-custom me-2" type="checkbox" id="">
						<label class="form-check-label" for="">Mark Absent Days as Unpaid</label>
				</div>
			</div>
			<button type="button" class="btn btn-primary mt-4"><b><i class="mdi mdi-check me-2"></i>Generate</b></button>
		</div><!--end card-body-->
	</div><!--end card-->
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table mb-0">
					<thead class="thead-light">
						<tr>
							<th>#</th>
							<th>Name</th>
							<th>Net Salary</th>
							<th>Duration</th>
							<th>Paid On</th>
							<th>Status</th>
							<th>Action</th>
						</tr><!--end tr-->
					</thead>

					<tbody>
						<tr>
							<td>1</td>
							<td>John</td>
							<td>5000</td>
							<td>6 months</td>
							<td>2024-11-01</td>
							<td>Open</td>
							<td>
								<a href="#"><i class="las la-pen text-secondary font-16"></i></a>
								<a href="#" class="ms-2" onclick="executeExample('warningConfirm')"><i class="las la-trash-alt text-secondary font-16"></i></a>
							</td>
						</tr><!--end tr-->
					</tbody>
				</table>
			</div>
		</div><!--end card-body-->
		<div id="mdlSelectCompany" class="modal fade bs-addCompany-modal-lg" tabindex="" aria-labelledby="myCModalLabel" style="display: none;" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title mt-0" id="myCModalLabel">Company Profile</h5>
					</div>
					<div class="modal-body">
						<div class="row mt-3 mb-2">
							<div class="col-lg-12">Company Index</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<select class="form-select" id="sltChooseCompany">
									<option selected="" value="">--</option>
									<option value="1">Company 1</option>
									<option value="2">Company 2</option>
								</select>
							</div>
						</div>
						<div class="row mt-2">
							<div class="col-lg-8"></div>
							<div class="col-lg-4 text-end">
								<button type="button" class="btn btn-primary" data-bs-dismiss="modal"><b><i class="mdi mdi-check me-2"></i>Ok</b></button>
							</div>
						</div>

					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div>
	</div><!--end card-->

</div>
<!--end row-->
@section Scripts {
	<script>
		$(window).on('load', function() {
			$('#mdlSelectCompany').modal({backdrop: 'static', keyboard: false});
			$('#mdlSelectCompany').modal('show');
		});

		function toggleTextbox(id) {
			const divContainer = document.getElementById(id);
			if (divContainer) {
				// Toggle display of the specific textbox
				divContainer.style.display = divContainer.style.display === 'none' ? 'block' : 'none';
			}
		}
	</script>
}