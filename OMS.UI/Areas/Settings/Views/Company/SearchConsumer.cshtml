<div class="row">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h4 class="card-title">Search Consumer</h4>
                </div>
                <div class="col-lg-6 text-end">
                   
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Search Filter
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>
                        <select id="filterDropdown" onchange="updateSearchFields()"class="form-select" >
                            <option value="" disabled selected>--</option>
                            <option value="name">Name Search</option>
                            <option value="date">Date Search</option>
                            <option value="dateBetween">Date Between Search</option>
                            <option value="phoneNumber">Phone Number Search</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row" id="searchFields">
                <div class="col-lg-3">
                    <div class="mb-3 text-start">
                        <label for="nameSearch">
                            By Name
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2 hidden" type="text" value="" id="nameSearch">

                    </div>
                </div> 
                <div class="col-lg-3">
                    <div class="mb-3 text-start">
                        <label for="dateSearch">
                            Date
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2 hidden" type="date" value="" id="dateSearch">

                    </div>
                </div> 
                <div class="col-lg-3">
                    <div class="mb-3 text-start">
                        <label for="startDate endDate">
                            Date Between
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>
                        <div class="row hidden">
                            <div class="col-lg-6">
                                <input class="form-control mt-2" type="date" value="" id="startDate">
                            </div>
                            <div class="col-lg-6">
                                <input class="form-control mt-2" type="date" value="" id="endDate">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="mb-3 text-start">
                        <label for="phoneNumberSearch">
                            Phone Number
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2 hidden" type="tel" value="" id="phoneNumberSearch">

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-end">
                    <button type="button" class="btn btn-warning bg-opacity-75 "><i class="mdi mdi-filter me-2"></i>Filter</button>
                </div>
            </div>
           
        </div>
    </div>
</div>
<script>
    function updateSearchFields() {
        const dropdown = document.getElementById("filterDropdown");
        const selectedValue = dropdown.value;

        // Hide all input fields initially
        document.querySelectorAll("#searchFields input").forEach(input => {
            input.classList.add("hidden");
        });

        // Show relevant input fields based on selected value
        if (selectedValue === "name") {
            document.getElementById("nameSearch").classList.remove("hidden");
        } else if (selectedValue === "date") {
            document.getElementById("dateSearch").classList.remove("hidden");
        } else if (selectedValue === "dateBetween") {
            document.getElementById("startDate").classList.remove("hidden");
            document.getElementById("endDate").classList.remove("hidden");
        } else if (selectedValue === "phoneNumber") {
            document.getElementById("phoneNumberSearch").classList.remove("hidden");
        }
    }
</script>