<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h4 class="card-title">Client Index</h4>
                    </div>
                    <div class="col-lg-6 text-end">
                        <button type="button" class="btn btn-de-primary" data-bs-toggle="modal"
                                data-animation="bounce" data-bs-target="#BAddress">
                            <i class="fas fa-plus me-2"></i>Add Client
                        </button>
                    </div>
                </div>
            </div><!--end card-header-->
            <div class="card-body">
                <div class="row">
                    <div class="col=md-12 text-md-end">

                        <div class="modal fade" id="BAddress" tabindex="-1" aria-labelledby="BAddressLabel" aria-hidden="true" style="display: none;">
                            <div class="modal-dialog modal-xl">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h6 class="modal-title m-0" id="BAddressLabel">Client Setup</h6>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-lg-4 g-2">
                                                <div class="mb-3 text-start">
                                                    <label for="example-text-input">
                                                        Client Id <span class="f-14 mr-1 text-danger">*</span>
                                                    </label>
                                                    <input class="form-control mt-2" type="text" value="" id="example-text-input">
                                                </div>
                                            </div>
                                            <div class="col-lg-4 g-2">
                                                <div class="mb-3 text-start">
                                                    <label for="example-text-input">
                                                        Client Name
                                                        <span class="f-14 mr-1 text-danger">*</span>
                                                    </label>
                                                    <input class="form-control mt-2" type="text" value="" id="example-text-input">
                                                </div>
                                            </div>
                                            <div class="col-lg-4 g-2">
                                                <div class="mb-3 text-start">
                                                    <label for="example-text-input">
                                                        Email <span class="f-14 mr-1 text-danger">*</span>
                                                    </label>
                                                    <input class="form-control mt-2" type="email" value="" id="example-text-input">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            
                                            <div class="col-lg-6 g-2">
                                                <div class="mb-3 text-start">
                                                    <label for="example-text-input">
                                                        Company Name <span class="f-14 mr-1 text-danger">*</span>
                                                    </label>
                                                    <select class="form-select mt-2" aria-label="Default select example">
                                                        <option value="" selected>--</option>
                                                        <option value="1">Meta</option>
                                                        <option value="2">Apple</option>
                                                        <option value="3">Microsoft</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 g-2">
                                                <div class="mb-3 text-start">
                                                    <label for="example-text-input">
                                                        Phone Number<span class="f-14 mr-1 text-danger">*</span>
                                                    </label>
                                                    <input class="form-control mt-2" type="tel" value="" id="example-text-input">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            
                                            <div class="col-lg-12 g-2">
                                                <div class="mb-3 text-start">
                                                    <label for="example-text-input">
                                                        Address 
                                                        <span class="f-14 mr-1 text-danger">*</span>
                                                    </label>
                                                    <textarea class="form-control mt-2" id="" rows="3" placeholder="e,g, 1/160 Main Road, New York"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 g-2">
                                                <div class="mb-3 text-start">
                                                    <label for="example-text-input">
                                                        Description
                                                    </label>
                                                    <textarea class="form-control mt-2" id="" rows="5" placeholder=""></textarea>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div><!--end card-body-->
                                    <div class="modal-footer">
                                        <div class="row">
                                            <div class="col-lg-12 text-end">
                                                <button type="button" class="btn btn-primary "><i class="mdi mdi-check-all me-2"></i>Save</button>
                                            </div>
                                        </div>
                                    </div><!--end modal-footer-->
                                </div><!--end modal-content-->
                            </div><!--end modal-dialog-->
                        </div><!--end modal-->
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table  mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Client Id</th>
                                <th>Client Name</th>
                                <th>Email</th>
                                <th>Company Name</th>
                                <th>Address</th>
                                <th>Phone Number</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>CL 1</td>
                                <td>Bala</td>
                                <td>tech@email.com</td>
                                <td>Meta</td>
                                <td>Delhi</td>
                                <td>7895654677</td>
                                <td>
                                    <a href="#" data-toggle="tooltip" data-placement="top" title="Edit"><i class="las la-pen text-secondary font-16"></i></a>
                                    <a href="#" class="ms-2" onclick="executeExample('warningConfirm')" data-toggle="tooltip" data-placement="top" title="Delete"><i class="las la-trash-alt text-secondary font-16"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table><!--end /table-->
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div>
    </div>
</div>

