<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h4 class="card-title">Consumer Settings</h4>
                </div>
            </div><!--end card-header-->
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Email
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>

                            <input class="form-control" type="email" value="" id="example-text-input">

                        </div>
                    </div>
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Password
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>
                            <input class="form-control" type="password" value="" id="example-text-input">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">Planning Type
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>
                            <select class="form-select" aria-label="Default select example">
                                <option value="" selected>Select Planning type</option>
                                <option value="1">Meta</option>
                                <option value="2">Apple</option>
                                <option value="3">Microsoft</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">Description
                               
                            </label>
                            <input class="form-control" type="text" value="" id="example-text-input">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Phone
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>

                            <input class="form-control" type="tel" value="" id="example-text-input">

                        </div>
                    </div>
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Website
                            </label>

                            <input class="form-control" type="url" value="" id="example-text-input">

                        </div>
                    </div>
                </div>
            </div><!--end card-body-->
            <div class="card-footer">
                <button type="button" class="btn btn-primary "><i class="mdi mdi-check-all me-2"></i>Save</button>
            </div>
        </div>
    </div>
</div>

