<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <h4 class="card-title">New Consumer</h4>
                </div>
            </div><!--end card-header-->
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Username
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>

                            <input class="form-control mt-2" type="text" value="" id="example-text-input">

                        </div>
                    </div>
                    <div class="col-lg-4 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Email
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>

                            <input class="form-control mt-2" type="email" value="" id="example-text-input">

                        </div>
                    </div>
                    <div class="col-lg-4 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Password
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>
                            <input class="form-control mt-2" type="password" value="" id="example-text-input">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">Planning Type
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>
                            <select class="form-select mt-2" aria-label="Default select example">
                                <option value="" selected>--</option>
                                <option value="1">Lite</option>
                                <option value="2">Advanced</option>
                                <option value="3">Premium</option>
                                <option value="3">Platinum</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Phone
                                <span class="f-14 mr-1 text-danger">*</span>
                            </label>

                            <input class="form-control mt-2" type="tel" value="" id="example-text-input">

                        </div>
                    </div>
                    <div class="col-lg-4 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Website
                            </label>

                            <input class="form-control mt-2" type="url" value="" id="example-text-input">

                        </div>
                    </div>
                </div>
                <div class="row">
                    
                    <div class="col-lg-12 g-2">
                        <div class="mb-3 text-start">
                            <label for="example-text-input">
                                Description

                            </label>
                            <textarea class="form-control mt-2"id=""rows="5"></textarea>
                            
                        </div>
                    </div>
                </div>
               
            </div><!--end card-body-->
            <div class="card-footer  border-top">
                <div class="row mt-2 text-end ">
                    <div class="col-lg-12 ">
                        <button type="button" class="btn btn-primary "><i class="mdi mdi-check-all me-2 "></i>Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

