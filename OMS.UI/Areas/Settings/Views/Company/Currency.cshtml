<script>
    // Get radio buttons and textboxes
    const yesRadio = document.getElementById("icc1");
    const noRadio = document.getElementById("icc2");
    const yesTextboxContainer = document.getElementById("yestextbox");
    const noTextboxContainer = document.getElementById("notextbox");

    // Function to toggle textboxes based on radio selection
    function toggleTextboxes() {
      if (yesRadio.checked) {
        yestextbox.style.display = "block"; // Show Yes textbox
        notextbox.style.display = "none";  // Hide No textbox
      } else if (noRadio.checked) {
        notextbox.style.display = "block"; // Show No textbox
        yestextbox.style.display = "none"; // Hide Yes textbox
      }
    }

    // Add event listeners for the radio buttons
    yesRadio.addEventListener("change", toggleTextboxes);
    noRadio.addEventListener("change", toggleTextboxes);
</script>

