<div class="row">
    <div class="card">
        <div class="card-header">
            <h4 class="header-title mt-2">Time Log Settings</h4>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="stoptime">
                                Stop timer automatically after office time.

                            </label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="stoptime">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 g-2">
                        <div class="mb-3 text-start">
                            <label for="timelog">
                                Timelog will require approval
                            </label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="timelog">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 g-2">
                        <div class="row mb-3 text-start">
                            <div class="col-lg-12">
                                <label for="switch1">
                                    Send time tracker reminders
                                </label>
                                <div class="form-check form-switch mt-2 ">
                                    <input class="form-check-input" type="checkbox" id="switch1" onclick="toggleTextbox('textbox1')" >
                                </div>
                            </div>
                        </div>
                        <div class="textbox-container" id="textbox1" style="display: none;">
                            <div class="row mb-3 text-start">
                                <div class="col-lg-12">
                                    <label for="time">
                                        Time
                                        <span class="f-14 mr-1 text-danger">*</span>
                                    </label>
                                    <input class="form-control mt-2" type="time" placeholder="" id="time">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 g-2">
                        <div class="row mb-3 mt-2 text-start">
                            <div class="col-lg-12">
                                <label for="switch2">
                                    Send Daily Timelog Report
                                </label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input mt-2" type="checkbox" id="switch2" onclick="toggleTextbox('textbox2')" >
                                </div>
                            </div>
                        </div>
                        <div class="textbox-container" id="textbox2" style="display: none;">
                            <div class="row mb-3 text-start">
                                <div class="col-lg-12">
                                    <label for="role">
                                        Choose roles for email report
                                        <span class="f-14 mr-1 text-danger">*</span>
                                    </label>
                                    <select class="form-select mt-2" id="role" aria-label="Default select example">
                                        <option value="1">App Administrator</option>
                                        <option value="2">Employee</option>
                                        <option value="3">Membership</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 text-start mt-2">
                        <button type="button" class="btn btn-primary "><i class="mdi mdi-check-all "></i>Save</button>
                    </div>
                </div>
            </div>
           
        </div>
    </div>
</div>
          


    <script>
        function toggleTextbox(id) {
            const textbox = document.getElementById(id);
            if (textbox) {
                // Toggle display of the specific textbox
                textbox.style.display = textbox.style.display === 'none' ? 'block' : 'none';
            }
        }
    </script>
