<script>
       // Select all checkboxes with the class 'dynamic-checkbox'
    const checkboxes = document.querySelectorAll(".dynamic-checkbox");

    // Loop through each checkbox
    checkboxes.forEach((checkbox) => {
      checkbox.addEventListener("change", () => {
        // Get the target textbox ID from the 'data-target' attribute
        const targetId = checkbox.getAttribute("data-target");
        const textboxContainer = document.getElementById(targetId);

        // Toggle the display of the corresponding textbox container
        if (checkbox.checked) {
          textboxContainer.style.display = "block"; // Hide when checkbox is checked
        } else {
          textboxContainer.style.display = "none"; // Show when checkbox is unchecked
        }
      });
    });

